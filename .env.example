# =============================================================================
# Sticker Trendz - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# --- AI: LLM (Gemini Flash free tier by default) ---
# Google Gemini API key (15 RPM / 1500 RPD free tier)
GEMINI_API_KEY=

# Optional: override LLM base URL (auto-set when GEMINI_API_KEY is present)
# LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Optional: override model per module (default: gemini-2.5-flash with Gemini, gpt-4o-mini with OpenAI)
# LLM_SCORING_MODEL=gemini-2.5-flash
# LLM_PROMPT_MODEL=gemini-2.5-flash
# LLM_SEO_MODEL=gemini-2.5-flash

# Optional: per-token costs for budget tracking (default: 0.0 for Gemini free tier)
# LLM_INPUT_COST_PER_TOKEN=0.0
# LLM_OUTPUT_COST_PER_TOKEN=0.0

# Optional: OpenAI key — used for content moderation API (no Gemini equivalent).
# Also used as LLM provider if GEMINI_API_KEY is not set.
OPENAI_API_KEY=

# Replicate API token for image generation
REPLICATE_API_TOKEN=

# Replicate model ID (default: FLUX Schnell free tier)
REPLICATE_MODEL_ID=black-forest-labs/flux-schnell

# Pinned model version hash on Replicate for reproducibility (optional)
REPLICATE_MODEL_VERSION=

# Image size in pixels for generation and quality validation (default: 1024)
REPLICATE_IMAGE_SIZE=1024

# Cost per image in USD for budget tracking (default: 0.003 for FLUX Schnell)
REPLICATE_COST_PER_IMAGE=0.003

# --- Database ---
# Supabase project URL (e.g. https://your-project.supabase.co)
SUPABASE_URL=

# Supabase service role key (NOT the anon key) - used for all server-side operations
SUPABASE_SERVICE_KEY=

# --- Cache / Rate Limiting ---
# Upstash Redis REST URL for Etsy API rate limit tracking and concurrency locks
UPSTASH_REDIS_URL=

# Upstash Redis REST token
UPSTASH_REDIS_TOKEN=

# --- Storage ---
# Cloudflare R2 access key (S3-compatible)
CLOUDFLARE_R2_ACCESS_KEY=

# Cloudflare R2 secret key
CLOUDFLARE_R2_SECRET_KEY=

# Cloudflare R2 bucket name
CLOUDFLARE_R2_BUCKET=

# Cloudflare R2 endpoint URL (e.g. https://<account-id>.r2.cloudflarestorage.com)
CLOUDFLARE_R2_ENDPOINT=

# Public URL prefix for R2 objects (e.g. https://pub-xxx.r2.dev)
CLOUDFLARE_R2_PUBLIC_URL=

# --- Etsy ---
# Etsy API key (client_id) - used for OAuth token refresh
ETSY_API_KEY=

# Etsy API secret (client_secret)
ETSY_API_SECRET=

# Etsy shop ID
ETSY_SHOP_ID=

# Etsy taxonomy ID for "Stickers" category (run: python scripts/setup_etsy_shop.py)
ETSY_TAXONOMY_ID=

# Etsy shipping profile ID (created by setup script)
ETSY_SHIPPING_PROFILE_ID=

# Etsy shop section IDs (created by setup script)
ETSY_SECTION_TRENDING_NOW=
ETSY_SECTION_POPULAR=
ETSY_SECTION_NEW_DROPS=
ETSY_SECTION_UNDER_5=

# --- Reddit ---
# No OAuth credentials needed — uses Reddit's public unauthenticated JSON API.
# Set a descriptive User-Agent so Reddit can identify your bot.
REDDIT_USER_AGENT=sticker-trendz/1.0

# --- Fulfillment ---
# Sticker Mule API key for on-demand print fulfillment
STICKER_MULE_API_KEY=

# --- Notifications ---
# Resend API key for email alerts and daily summaries (free: 3,000 emails/month)
# Get your key at https://resend.com
RESEND_API_KEY=

# Email address to receive operational alerts
ALERT_EMAIL=

# --- Operational Caps ---
# Max trends processed per 2-hour cycle (default: 5)
MAX_TRENDS_PER_CYCLE=5

# Max images generated per day across all cycles (default: 50)
MAX_IMAGES_PER_DAY=50

# Max active Etsy listings (default: 300)
MAX_ACTIVE_LISTINGS=300

# Monthly AI budget hard cap in USD (default: 150)
AI_MONTHLY_BUDGET_CAP_USD=150
